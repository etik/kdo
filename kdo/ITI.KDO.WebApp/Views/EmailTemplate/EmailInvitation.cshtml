@using ITI.KDO.WebApp.Models.InviteViewModels;

@model InviteViewModel
@{
    ViewData["Titre"] = "Send email invitation.";
}

<div class="container">
    <div class="page-header">
        <h1>@ViewData["Titre"]</h1>
    </div>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

    <form asp-controller="Email" asp-action="SendFriendInvitation" method="post">
        @if (!ViewContext.ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }
        <div class="form-group">
            <label asp-for="RecipientsMail">Recipients email: </label>
            <input asp-for="RecipientsMail" class="form-control" />
            <span asp-validation-for="RecipientsMail"></span>
        </div>
        <div class="form-group">
            <label asp-for="SenderMail">Sender email: </label>
            <input asp-for="SenderMail" class="form-control" />
            <span asp-validation-for="SenderMail"></span>
        </div>
        <div class="form-control">
            <label asp-for="Descriptions">Descriptions: </label>
            <input asp-for="Descriptions" class="form-control" />
            <span asp-validation-for="Descriptions"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">Submit</button> 
        </div>
        <div class="form-group">
            <button type="reset" class="btn btn-primary btn-block">Close</button>
        </div>
    </form>
</div>