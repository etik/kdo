@using ITI.KDO.WebApp.Services
@{
    Token token = (Token)ViewData["Token"];
    string mail = (string)ViewData["Mail"];
    string breachPadding = (string)ViewData["BreachPadding"];
    string location = string.Format("{0}://{1}/", Context.Request.Scheme, Context.Request.Host);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Authenticated</title>
</head>
<body>
    <script>
        (function () {
            window.opener.postMessage(JSON.stringify({
                type: 'authenticated',
                payload: {
                    bearer: {
                        access_token: '@token.AccessToken',
                        expires_in: @token.ExpiresIn,
                    },
                    mail: '@mail'
                }
            }), '@location');

            window.close();
        })();
    </script>
    <!-- @breachPadding -->
</body>
</html>
